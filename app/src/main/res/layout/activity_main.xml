<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="MY SCHOOL PROFILE FORM"
        android:layout_centerHorizontal="true" >

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/textView_layout"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="text"
                android:text="REG NUMBER"
                android:layout_margin="12dp"
                />

            <EditText
                android:id="@+id/regNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="2000211150"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="25dp"
                >

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="text"
                android:text="@string/full_name"
                android:layout_margin="12dp"
                />

            <EditText
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="John Doe"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="25dp" >

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="text"
                android:text="DEPARTMENT"
                android:layout_margin="12dp"
                />

            <EditText
                android:id="@+id/Department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="Medicine"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="25dp"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:inputType="text"
                android:text="LEVEL"
                android:layout_margin="12dp"
                />

            <EditText
                android:id="@+id/Level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="100"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="25dp" >

            </EditText>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="FACULTY"
                android:layout_margin="12dp"
                />

            <EditText
                android:id="@+id/Faculty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="Sciences"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="25dp"
                >

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="STATE"
                android:layout_margin="12dp"
                />

            <EditText
                android:id="@+id/State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="Abia"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="25dp"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editTextText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="COUNTRY"
                android:layout_margin="12dp"
                />

            <EditText

                android:id="@+id/Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:ems="10"
                android:hint="Niger"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="25dp"
                />



        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_area"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:text="SUBMIT"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/textView_layout"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:textColor="#F44336" />



</RelativeLayout>